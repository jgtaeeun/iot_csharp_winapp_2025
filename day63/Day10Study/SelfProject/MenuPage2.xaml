                              <Run Text="선수 활약 영상 링크" />
                        </Hyperlink>        
                    </TextBlock>

                </TabItem>
                <TabItem>
                    <TabItem.Header >
                        <StackPanel Orientation="Vertical" >
                            <Label Content="외야수"  Margin="25,0,0,0"/>
                        </StackPanel>
                    </TabItem.Header>
                    <TextBlock TextWrapping="Wrap"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                    >
                        <Run Text="50 이원석 LEE WONSEOK" FontWeight="Bold"  />
                        <LineBreak />
